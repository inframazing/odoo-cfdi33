<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
        
        <!-- Tree -->
        <record id="cfdi_sat_forma_pago_tree" model="ir.ui.view">
            <field name="name">cfdi.sat.forma.pago.tree</field>
            <field name="model">sat.forma.pago</field>
            <field name="arch" type="xml">
                <tree string="Forma de pago" editable="top">
                    <field name="active" invisible="True"/>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <!-- Actions windows -->
        <record id="action_cfdi_sat_forma_pago" model="ir.actions.act_window">
            <field name="name">Forma de Pago</field>
            <field name="res_model">sat.forma.pago</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>
        
